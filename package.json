{
  "private": true,
  "scripts": {
    "add:component": "npx shadcn-ui@latest add -p packages/ui/src/ -c packages/ui/ && echo \"\nRemember! Before you can use the component you still need to export it from packages/ui/src/index.tsx\n\"",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "turbo": "latest"
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
